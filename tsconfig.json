{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "modules/*": ["modules/*"],
    },
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./__tests__/**/*",
    "./modules/**/*",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}
